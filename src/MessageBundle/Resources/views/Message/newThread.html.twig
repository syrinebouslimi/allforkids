{% if app.user and is_granted('ROLE_ADMIN') %}

    {% set result=true %}
{% else %}
    {% set result=false %}
{% endif %}


{% extends result == 'true'
    ? 'KidsBackendBundle::Template_Admin.html.twig'
    : 'KidsFrontBundle::espaceparent.html.twig' %}



{% block body %}

    {% if result %}


        <section class="content-header">
            <h1>
                Read Mail
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Mailbox</li>
            </ol>
        </section>

        <section class="content">
            <div class="row">

                <div class="col-md-3">
                    <a href="{{ url('fos_message_thread_new' ) }}"
                       class="btn btn-primary btn-block margin-bottom">{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}</a>

                    <div class="box box-solid">
                        <div class="box-header with-border">
                            <h3 class="box-title">Folders</h3>

                            <div class="box-tools">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                            class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body no-padding">
                            <ul class="nav nav-pills nav-stacked">
                                <li class="active"><a href="#"><i class="fa fa-inbox"></i> Inbox
                                        <span class="label label-primary pull-right">{{ fos_message_nb_unread(threads) }}</span></a>
                                </li>
                                <li><a href="#"><i class="fa fa-envelope-o"></i> Sent</a></li>
                                <li><a href="#"><i class="fa fa-trash-o"></i> Trash</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    {{ form_start(form) }}

                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Compose New Message</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">

                            <div class="form-group">
                                {{ form_widget(form.recipient,{'attr':{'class':'form-control','placeholder':'To:'}}) }}

                                {#<input class="form-control" placeholder="To:">#}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.subject,{'attr':{'class':'form-control','placeholder':'Subject:'}}) }}

                                {#<input class="form-control" placeholder="Subject:">#}
                            </div>
                            <div class="form-group">

                                {{ form_widget(form.body,{'attr':{'class':'form-control','rows':'3'}}) }}

                                {#<textarea id="compose-textarea" class="form-control" style="height: 300px">#}

                                </textarea>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Send
                                </button>
                            </div>
                        </div>
                        <!-- /.box-footer -->
                    </div>
                    {{ form_end(form) }}
                    <!-- /. box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>

    {% else %}

        <div class="sectionTitle text-center">
            <h2>
                <span class="shape shape-left bg-color-4"></span>
                <span>Envoyer une nouvelle reclamation</span>
                <span class="shape shape-right bg-color-4"></span>
            </h2>
        </div>

        <div class="row">
            <div class="col-xs-12" style="padding: 50px;">
                <div class="homeContactContent">
                    {#<form action="#" method="POST" role="form">#}
                    {{ form_start(form) }}

                    <div class="form-group">
                            <i class="fa fa-user"></i>
                        {{ form_widget(form.recipient,{'attr':{'class':'form-control border-color-1','placeholder':'To:'}}) }}

                        {#<input type="text" class="form-control border-color-1" id="exampleInputEmail1"#}
                                   {#placeholder="First name">#}
                        </div>
                        <div class="form-group">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            {#<input type="text" class="form-control border-color-2" id="exampleInputEmail2"#}
                                   {#placeholder="Email address">#}
                            {{ form_widget(form.subject,{'attr':{'class':'form-control border-color-2','placeholder':'Subject:'}}) }}

                        </div>
                        <div class="form-group">
                            <i class="fa fa-comments" aria-hidden="true"></i>
                            {{ form_widget(form.body,{'attr':{'class':'form-control border-color-4','rows':'3','placeholder':'Taper ...'}}) }}

                            {#<textarea class="form-control border-color-4" placeholder="Write message"></textarea>#}
                        </div>
                        <button type="submit" class="btn btn-primary">Envoyer reclamamtion</button>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>

    {% endif %}
{% endblock %}



