{% if app.user and is_granted('ROLE_ADMIN') %}

    {% set result=true %}
{% else %}
    {% set result=false %}
{% endif %}


{% extends result == 'true'
    ? 'KidsBackendBundle::Template_Admin.html.twig'
    : 'KidsFrontBundle::espaceparent.html.twig' %}

{% block body %}

{% if result %}

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Read Mail
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Mailbox</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">

                <div class="col-md-3">
                <a href="{{ url('fos_message_thread_new' ) }}"
                class="btn btn-primary btn-block margin-bottom">{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}</a>

                <div class="box box-solid">
                <div class="box-header with-border">
                <h3 class="box-title">Folders</h3>

                <div class="box-tools">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                class="fa fa-minus"></i>
                </button>
                </div>
                </div>
                <div class="box-body no-padding">
                <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="#"><i class="fa fa-inbox"></i> Inbox
                <span class="label label-primary pull-right">{{ fos_message_nb_unread(threads) }}</span></a>
                </li>
                <li><a href="#"><i class="fa fa-envelope-o"></i> Sent</a></li>
                <li><a href="#"><i class="fa fa-trash-o"></i> Trash</a></li>
                </ul>
                </div>
                </div>
                </div>


                <!-- /.col -->
                <div class="col-md-9">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Read Mail</h3>
                            <h3>Object de la reclamation : {{ thread.subject }}</h3>
                        </div>
                        <!-- /.box-header -->
                        {% for message in thread.messages %}
                        <div class="box-body no-padding">
                            <div class="mailbox-read-info">






                                <h5 style="margin-top: 20px;">From: {{ message.sender }}
                                    <span class="mailbox-read-time pull-right">Le {{ message.createdAt|date }}</span></h5>

                            </div>

                            <div class="mailbox-read-message">

                                <p>{{ message.body }}</p>

                            </div>

                            {% endfor %}

                        </div>

                        {{ form_start(form) }}

                        <div class="mailbox-controls with-border text-center">
                            {{ form_widget(form.body,{'attr':{'class':'form-control','rows':'3'}}) }}


                        </div>

                            <div class="box-footer">
                            <input type="submit" class="btn btn-info pull-right"/>

                        </div>
                        {{ form_end(form) }}



                    </div>
                </div>
            </div>
        </section>
{% else %}



    <div class="col-md-9">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 style="font-family: Serif;">Object de la reclamation : {{ thread.subject }}</h3>
            </div>
            <!-- /.box-header -->
            {% for message in thread.messages %}
            <div class="box-body no-padding">
                <div class="mailbox-read-info">

                    <h5 style="margin-top: 20px;">From: {{ message.sender }}
                        <span class="mailbox-read-time pull-right">Le {{ message.createdAt|date }}</span></h5>

                </div>

                <div class="mailbox-read-message">

                    <p>{{ message.body }}</p>

                </div>

                {% endfor %}

            </div>

            {{ form_start(form) }}

            <div class="mailbox-controls with-border text-center">
                {{ form_widget(form.body,{'attr':{'class':'form-control','rows':'3'}}) }}


            </div>

            <div class="box-footer">
                <input type="submit" class="btn btn-info pull-right"/>

            </div>
            {{ form_end(form) }}



        </div>
    </div>

{% endif %}

{% endblock  %}
