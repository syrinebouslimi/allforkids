{% extends 'KidsBackendBundle::Template_Admin.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->

            <div class="box-header">
                <h3 class="box-title">La liste des publications</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Cat√©gorie</th>
                    <th>Contenu</th>
                    <th>Image</th>
                    <th>Etat</th>
                    <th>Supprimer</th>
                    <th>Modifier</th>
                    </tr>
                    </thead>
                    {% for key in publication %}
                        <tr>
                            <td >{{ key.nomPublication }}</td>
                            <td>
                                {% set string = key.descriptionPublication %}
                                {{ string|striptags|slice(0, 10)|raw }}...
                            </td>
                            <td>{{ key.datePublication|date("m/d/Y") }}</td>
                            <td>{{ key.typePublication.nomTypePublication }}</td>
                            <td>{{ key.categoriePublication.nomCategPublication}}</td>

                            <td>
                                <button data-toggle="modal" data-target="#video{{ key.id }}" type="button" class="btn btn-block btn-default btn-flat">Consulter contenu</button>
                            </td>

                            <td>
                                <button data-toggle="modal" data-target="#image{{ key.id }}" type="button" class="btn btn-block btn-default btn-flat">Consulter image</button>
                            </td>
                            <td>{{ key.etatPublication}}</td>

                            <td><button type="button" class="btn btn-block btn-danger btn-flat"><a href="{{ path('supprimer_pubparid',{'id':key.id}) }}" style="color: white;">Supprimer</a></button></td>
                            <td><button type="button" class="btn btn-block btn-warning btn-flat"><a href="{{ path('modifier_pubparid',{'id':key.id}) }}" style="color: white;">Modifier</a></button></td>

                        </tr>
                        <div class="modal modal-success fade" id="image{{ key.id }}">
                            <div class="modal-dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <img src="{{ asset('uploads/images/' ~ key.imagePublication) }}" style="width: 100%;" >
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% if key.typePublication.nomTypePublication is same as('Video')%}
                        <div class="modal modal-success fade" id="video{{ key.id }}">
                            <div class="modal-dialog">
                                <div class="modal-video">
                                    <video width="100%" height="350" controls style="align-content: center">
                                        <source src="{{ asset('uploads/videos/' ~ key.contenuPublication) }}" type="video/mp4" style="margin-left: 26%; width: 100%;">
                                        <source src="{{ asset('uploads/videos/' ~ key.contenuPublication) }}" type="video/ogg" style="width: 100%; margin-left: 26%;">
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        {% if key.typePublication.nomTypePublication is same as('Article')%}
                        <div class="modal modal-success fade" id="video{{ key.id }}">
                            <div class="modal-dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <img src="{{ asset('uploads/videos/' ~ key.contenuPublication) }}" style="width: 100%;" >
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        {% if key.typePublication.nomTypePublication is same as('Activite')%}
                        <div class="modal modal-success fade" id="video{{ key.id }}">
                            <div class="modal-dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <img src="{{ asset('uploads/videos/' ~ key.contenuPublication) }}" style="width: 100%;" >
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        <link rel="stylesheet" href="{{ asset('template_Admin_Principal/dist/css/skins/_all-skins.min.css') }}">
                        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
                        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
                        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>

    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging'      : true,
                'lengthChange': true,
                'searching'   : true,
                'ordering'    : true,
                'info'        : true,
                'autoWidth'   : true
            })
        })
    </script>
{% endblock body %}
