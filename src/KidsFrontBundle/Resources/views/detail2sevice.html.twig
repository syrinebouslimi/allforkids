                dataString['mail'] = $('#mail').val();
                dataString['textreclam'] =$('#textreclam').val();

//            dataString['service'] =$('#idService').val();
                $.ajax({
                    method: 'POST',
                    dataType: 'json',
                    url: '{{ path('ajoutREclamation') }}',
                    data: dataString,
                    success: function (data) {
                        console.log(data);

                        $('#success-reclamation').text('reclamation ajouté');
                        $("#reclameur").val("");
                        $("#mail").val("");
                        $("#textreclam").val("");
                    }
                });

            });
        });
