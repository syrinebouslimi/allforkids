 {% block body %}

     <section class="teacher-details padding-120">
         <div class="container">
             <div class="row">
                 <div class="col-md-6 col-sm-12 col-xs-12">
                     <div class="teacher-image">
                         <img src="{{ asset('uploads/images/' ~ enseignant.imageEnseignant) }}" alt="teacher image"
                              class="img-responsive">
                     </div>
                 </div>
                 <div class="col-md-6 col-sm-12 col-xs-12">
                     <div class="teacher-content">
                         <h4>{{ enseignant.prenomEnseignant }} {{ enseignant.nomEnseignant }}</h4>
                         <span>{{ enseignant.designationEnseignant }}</span>
                         <p>{{ enseignant.aboutEnseignant }}</p>

                         <ul class="teacher-address">
                             <li><span><i class="fa fa-home"
                                          aria-hidden="true"></i></span>{{ enseignant.adresseEnseignant }}</li>
                             <li><span><i class="fa fa-phone"
                                          aria-hidden="true"></i></span>{{ enseignant.phoneEnseignant }}</li>
                             <li><span><i class="fa fa-envelope-o"
                                          aria-hidden="true"></i></span>{{ enseignant.emailEnseignant }}</li>
                         </ul>
                     </div>
                 </div>
             </div><!-- row -->


             <section>
                 <div class="container">
                     <div class="row">

                         <div class="teachersInfo">

                             <h3>Teachers Information</h3>
                             <div class="teachersProfession bg-color-1">Designation</div>
                             <div class="professionDetails">{{ enseignant.designationEnseignant }}</div>
                             <div class="teachersProfession bg-color-2">Diplôme</div>
                             <div class="professionDetails">{{ enseignant.diplomeEnseignant }}</div>
                             <div class="teachersProfession bg-color-3">Experience</div>
                             <div class="professionDetails">{{ enseignant.experienceEnseignant }}</div>
                             <div class="teachersProfession bg-color-4">Hobbies</div>
                             <div class="professionDetails">{{ enseignant.hobbiesEnseignant }}</div>
                             <div class="teachersProfession bg-color-5">Cours</div>
                             <div class="professionDetails">{{ enseignant.coursEnseignant }}</div>
                         </div>
                     </div>
                 </div>
             </section>
         </div>
     </section>

 {% endblock body %}