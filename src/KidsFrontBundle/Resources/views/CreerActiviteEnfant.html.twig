{% extends 'KidsFrontBundle::Template_User.html.twig' %}

{% block bandeau %}

    <section class="pageTitleSection">
        <div class="container">
            <div class="pageTitleInfo">
                <h2> </h2>
                <ol class="breadcrumb">
                    <li class="active"> </li>
                </ol>
            </div>
        </div>
    </section>
{% endblock bandeau %}

{% block body %}
<div class="sectionTitle text-center">
    <h2 style="margin-bottom: 3%">
        <span class="shape shape-left bg-color-4"></span>
        <span>Creer un espace enfant</span>
        <span class="shape shape-right bg-color-4"></span>
    </h2>
</div>

{{ form_start(form) }}
<section class="mainContent full-width clearfix">
    <div class="container">
        <div class="sectionTitle text-center">
            <div class="row">
                <div class="col-xs-12">
                    <div class="homeContactContent">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <i class="fa fa-user"></i>
                                    {{ form_widget(form.nomActivite,{'attr':{'class':'form-control border-color-1', 'placeholder': 'Activit√©'}} ) }}

                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <i class="fa fa-user"></i>
                                    {{ form_widget(form.contenuActivite,{'attr':{'class':'form-control border-color-2', 'placeholder': 'Contenu'}} ) }}

                                </div>
                            </div>
                            {{ form_widget(form.Valider,{'attr':{'class':'btn btn-primary'}} ) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

    {{ form_end(form) }}

{% endblock body %}