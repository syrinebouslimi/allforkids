{% extends 'KidsFrontBundle::TemplateProduit.html.twig' %}

{% block body %}


    <section class="mainContent full-width clearfix productSection">
        <div class="container">
            <div class="row">

                {#Lekbiirrr#}
                <div class="row">
                    <div class="col-md-8 col-sm-6 col-xs-10 pull-right">
                        {% for p in produits %}



                            <div class="col-md-4 col-xs-6">
                                <div class="box bg-color-6">
                                    <div class="box-img border-color-6 text-center">
                                        <a href="single-product.html">
                                            <img src="{{ asset('uploads/images/' ~ p.imageProduit) }}" alt="image" class="img-responsive">
                                        </a>
                                        <a data-toggle="modal" href=".html" class="btn-block"><i class="fa fa-eye" aria-hidden="true"></i>Quick View</a>
                                    </div>
                                    <div class="box-info">
                                        <h4><b>{{ p.nomProduit }}</b></h4>
                                        <div class="produit">
                                            <span><b>Prix: {{ p.prixProduit}}</b></span>
                                        </div>

                                        <li><a href="{{ path('detailProduitFront',{'id':p.id}) }}" class="btn btn-primary bg-color-6 btn-block">Details</a></li>

                                    </div>
                                </div>
                            </div>

                        {% endfor %}

                    </div>
                    <div class="col-md-3 col-sm-5 col-xs-12 pull-left">
                        <aside>
                            <div class="panel panel-default courseSidebar">

                                <div class="panel-heading bg-color-1 border-color-1">
                                    <li><a href="{{ path('RechercherProduitFront') }}" class="panel-title">Search</a></li>

                                </div>
                                <div class="panel-body">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Enter Your Search" aria-describedby="basic-addon2">
                                        <span class="input-group-addon" id="basic-addon2"><input class="btn btn-primary bg-color-1" type="submit" value="Search"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="panel panel-default courseSidebar">
                                <div class="panel-heading bg-color-5 border-color-5">
                                    <h3 class="panel-title">Categories</h3>
                                </div>
                                <div class="panel-body">
                                    <ul class="list-unstyled categoryItem">
                                        {% for cat in categories %}
                                            <li><a href="{{ path('ProduitParCategorie', {'id': cat.id }) }}"> {{ cat.nomCategorie }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </aside>
                    </div>
                </div>
                {#S8iirrr#}


            </div>
        </div>
    </section>
{% endblock %}