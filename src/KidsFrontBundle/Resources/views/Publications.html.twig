{% endblock bandeau %}

{% block body %}
    <div class="container">
        <div class="sectionTitle text-center">
            <h2>
                <span class="shape shape-left bg-color-4"></span>
                <span>Bienvenue</span>
                <span class="shape shape-right bg-color-4"></span>
            </h2>
        </div>


        <div class="row">
            <div class="col-xs-12">
                <div class="filter-container isotopeFilters">
                    <ul class="list-inline filter">
                        <li class="active"><a href="#" data-filter="*">View All</a></li>
                        <li><a href="#" data-filter=".Article">Article</a></li>
                        <li><a href="#" data-filter=".Video">Video</a></li>
                        <li><a href="#" data-filter=".Activite">Activite</a></li>
                    </ul>
                </div>
            </div>
        </div>


        <div class="row isotopeContainer" id="container">
            {% for key in publication %}
                {% if key.typePublication.nomTypePublication=="Video" %}
                    <div class="col-sm-3 col-xs-12 block isotopeSelector Video">

                        <div class="thumbnail thumbnailContent">

                            <a href="{{ path('afficherpublicationdetails',{'id':key.id}) }}" target="_blank"><img
                                        src="{{ asset('uploads/images/' ~ key.imagePublication) }}" alt="image"
                                        class="img-responsive"></a>
                            <div class="caption border-color-4">
                                <h3><a class="color-4">{{ key.nomPublication }}</a></h3>
                                <ul class="list-unstyled">
                                    <li><i class="fa fa-calendar-o"
                                           aria-hidden="true"></i>{{ key.datePublication|date("m/d/Y") }}</li>
                                </ul>
                                <p>
                                    {% set string = key.descriptionPublication %}
                                    {{ string|striptags|slice(0, 20)|raw }}...
                                </p>
                                <ul class="list-inline btn-sky">
                                    <li><a href="{{ path('afficherpublicationdetails',{'id':key.id}) }}" target="_blank"
                                           class="btn btn-link"><i class="fa fa-angle-double-right"
                                                                   aria-hidden="true"></i> En savoir +</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endif %}


                {% if key.typePublication.nomTypePublication=="Article" %}
                    <div class="col-sm-3 col-xs-12 block isotopeSelector Article">
